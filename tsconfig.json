{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "noEmit": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "inlineSources": false,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noUncheckedIndexedAccess": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "allowJs": true,
    "incremental": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      // "@opencourier/backend-admin-sdk": ["./src/backend-admin-sdk/src"],
      // "@opencourier/admin-web-components": ["../../packages/admin-web-components/src"],
      // "@opencourier/shared-types": ["../../packages/shared-types/src"],
      // "@opencourier/math": ["../../packages/math/src"],
    }
  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
